@model List<App.Models.SearchResultViewModel>

<h2>Search Results</h2>

@if (Model.Count == 0)
{
    <p>No results found.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Service ID</th>
                <th>Service Name</th>
                <th>Date Requested</th>
                <th>Address</th>
                <th>Cost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr>
                    <td>@result.CustomersServiceId</td>
                    <td>@result.ServiceName</td>
                    <td>@result.DateServiceRequested.ToShortDateString()</td>
                    <td>@result.Address</td>
                    <td>@result.CostOfService</td>
                </tr>
            }
        </tbody>
    </table>
}
