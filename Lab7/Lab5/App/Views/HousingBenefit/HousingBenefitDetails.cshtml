@model App.Models.HousingBenefitViewModel

<h1>Housing Benefit Details</h1>

<table class="table table-bordered">
    <tr>
        <th>ID:</th>
        <td>@Model.HbRecipientId</td>
    </tr>
    <tr>
        <th>Address:</th>
        <td>@Model.HbAddress</td>
    </tr>
    <tr>
        <th>Postcode:</th>
        <td>@Model.HbPostcode</td>
    </tr>
    <tr>
        <th>Other Details:</th>
        <td>@Model.HbOtherDetails</td>
    </tr>
</table>

<a href="@Url.Action("HousingBenefits", "HousingBenefit")" class="btn btn-primary">Back to List</a>
<a href="@Url.Action("EditHousingBenefit", "HousingBenefit", new { id = Model.HbRecipientId })" class="btn btn-warning">Edit</a>
